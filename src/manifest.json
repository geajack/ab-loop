{
    "manifest_version": 2,
    "name": "Example",
    "description": "An example description.",
    "version": "1",
    "icons": {
        "48": "./icons/icon48.png",
        "96": "./icons/icon96.png"
    },
    "applications": {
        "gecko": {
            "id": "example@example.com",
            "strict_min_version": "55.0"
        }
    },
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [],
            "js": [
                "browser-polyfill.min.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "page_action": {
        "show_matches": [
            "*://*/*"
        ],
        "browser_style": true,
        "default_icon": {
            "19": "./icons/icon19.png",
            "38": "./icons/icon38.png"
        },
        "default_popup": "./popup/index.html",
        "default_title": "Example"
    },
    "options_ui": {
        "browser_style": false,
        "open_in_tab": true,
        "page": "./options/index.html"
    },
    "permissions": [
        "*://*/*"
    ]
}